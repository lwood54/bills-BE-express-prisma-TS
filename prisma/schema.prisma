// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstName String?
  lastName  String?
  email     String  @unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bills          Bill[]
  billCategories BillCategory[]
}

model Bill {
  id             String        @id @default(uuid())
  balance        Float
  dayDue         Int
  interestRate   Float
  creditLimit    Float         @default(0)
  paymentAmount  Float
  title          String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  user           User          @relation(fields: [userId], references: [id])
  userId         String
  billCategory   BillCategory? @relation(fields: [billCategoryId], references: [id])
  billCategoryId String?
}

enum Scale {
  ESSENTIAL
  NEUTRAL
  NON_ESSENTIAL
}

model BillCategory {
  id     String @id @default(uuid())
  title  String
  scale  Scale  @default(NEUTRAL)
  User   User   @relation(fields: [userId], references: [id])
  userId String
  bills  Bill[]
}
